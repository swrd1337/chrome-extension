{
    "name": "Github Web-Author",
    "version": "1.0",
    "description": "Open XML files from GitHub repos with Oxygen XML Web Author in one click.",
    "permissions": [
        "declarativeContent",
        "tabs",
        "webNavigation",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": [
            "http://github.com/*",
            "https://github.com/*"
        ],
        "css": ["style.css"],
        "js": ["content.js"]
    }],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/webauthor.png",
            "32": "images/webauthor.png",
            "64": "images/webauthor.png",
            "128": "images/webauthor.png"
        }
    },
    "web_accessible_resources": ["images/wapencil.png"],
    "manifest_version": 2
}