{
    "name": "Github Web-Author",
    "version": "1.0",
    "description": "Open XML files from GitHub repos with Oxygen XML Web Author in one click.",
    "permissions": [
        "declarativeContent",
        "tabs",
        "webNavigation",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://github.com/*",
                "https://github.com/*"
            ],
            "js": ["content.js"]
        }
    ],
    "page_action": {
        "default_popup" :"popup.html",
        "default_icon": {
            "16": "images/Web_author80.png",
            "32": "images/Web_author80.png",
            "64": "images/Web_author80.png",
            "128": "images/Web_author80.png"
        }
    },
    "web_accessible_resources": ["images/pencil.png"],
    "manifest_version": 2
}