{
    "name": "Oxygen XML Web Author",
    "short_name": "Web Author",
    "description": "The XML editor that helps your whole team engage in content creation",
    "version": "0.01",
    "manifest_version": 2,
    "permissions": [
        "declarativeContent",
        "tabs",
        "webNavigation",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": [
            "http://github.com/*",
            "https://github.com/*"
        ],
        "css": ["styles/style.css"],
        "js": ["scripts/content.js"]
    }],
    "icons": {
        "128": "images/web-author.png"
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/web-author.png",
            "32": "images/web-author.png",
            "64": "images/web-author.png",
            "128": "images/web-author.png"
        }
    },
    "web_accessible_resources": ["images/wa-pencil.png"]
}